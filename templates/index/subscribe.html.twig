{% extends 'base.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
<main>
    <div class="border solid border-zinc-800 py-4 border-x-0 border-y-2 mx-4">
      <h1 class="text-3xl font-bold text-center">Newsletter</h1>
    </div>
    <div class="flex justify-center flex-col text-center gap-4 border bg-white border-zinc-300 rounded-2xl px-6 w-2/12 mx-auto my-10 max-sm:w-full max-sm:mx-2">
      <h3 class="font-3xl font-black mt-4">Subscribe</h3>
      <p class="font-xs">Get fresh web design resources delivered straight to your inbox every week.</p>
      <div class="flex flex-col gap-4">
        <div class=" text-gray-200 border-0 rounded-md p-2 bg-white focus:outline-none transition ease-in-out duration-150">
            {{ form_row(newsletterForm.email) }}
        </div>
        <button type="submit" class="border-0 bg-black text-white p-1 rounded-xl font-medium mb-4 hover:opacity-80">{{ form_end(newsletterForm) }}</button>
      </div>
    </div>  
</main>
{% endblock %}
