{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }}
{% endblock %}

{% block body %}
  <main>
    <div class="border solid border-zinc-800 py-4 border-x-0 border-y-2 mx-4">
      <h1 class="text-3xl font-bold text-center">Shop</h1>
    </div>
    <div class="flex w-4/5 justify-around items-center mx-auto my-10 max-sm:w-full max-sm:flex-col-reverse">    
      <div class="w-5/12 max-h-fit bg-zinc-300 p-3 m-10 flex flex-col gap-1 rounded-2xl">
        <img src="{{ asset('images/johndoecover.jpg') }}" class="w-full h-4/5 object-cover rounded-2xl" alt="" />
        <div class="flex flex-col gap-4">
          <div class="flex flex-row justify-between">
            <div class="flex flex-col">
              <span class="text-xl font-bold">Ephemeral silhouettes, Eternal Presence</span>
              <p class="text-lg text-gray-700">By John Doe</p>
              <p class="text-base text-gray-700">January 2025</p>
            </div>
            <span class="font-bold text-zinc-900">$25.99</span>
          </div>
          <button class="flex justify-center items-center mt-4 py-2 gap-2 bg-neutral-900 text-white rounded-2xl hover:bg-white hover:text-black hover:border-neutral-900 transition duration-300 ease-in-out">
            <a href="{{path('app_article')}}">View the article</a>
          </button>
        </div>
      </div>
      <div class="w-5/12 max-h-fit bg-zinc-300 p-3 m-10 flex flex-col gap-1 rounded-2xl">
        <img src="{{ asset('images/janesmithcover.jpg') }}" class="w-full h-4/5 object-cover rounded-2xl" alt="Eclipse" />
        <div class="flex flex-col gap-4">
          <div class="flex flex-row justify-between">
            <div class="flex flex-col">
              <span class="text-xl font-bold">Fragmentation of being, wholeness of sight</span>
              <p class="text-lg text-gray-700">By Jane Smith</p>
              <p class="text-base text-gray-700">December 2024</p>
            </div>
            <span class="font-bold text-zinc-900">$20.99</span>
          </div>
          <button class="flex justify-center items-center mt-4 py-2 gap-2 bg-neutral-900 text-white rounded-2xl hover:bg-white hover:text-black hover:border-neutral-900 transition duration-300 ease-in-out">
            <a href="{{path('app_article')}}">View the article</a>
          </button>
        </div>
      </div>
    </div>
  </main>
{% endblock %}
