{% extends 'base.html.twig' %}

{% block title %}
  Hello ProfileController!
{% endblock %}

{% block body %}
  <main>
    <div class="border solid border-zinc-800 py-4 border-x-0 border-y-2 mx-4">
      <h1 class="text-6xl font-md text-center">Welcome Back!</h1>
    </div>

    <div class="mx-auto max-w-3xl border my-6 p-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-lg text-center">
        <h1 class="text-2xl my-4 font-bold sm:text-3xl">Change your settings</h1>
        <p class="mt-4 text-gray-600">You can change your settings here. If you have any questions, feel free to contact us.</p>

        <form class="mx-auto mb-0 my-6 max-w-md space-y-4" action="#">
          <div>
            <label class="sr-only" for="text">Username</label>
            <div class="relative">{{ form(profileForm) }}</div>
          </div>
        </form>
    {% if app.user %}
      <div class="my-3">You are logged in with the mail {{ app.user.userIdentifier }}</div>
    {% endif %}
      </div>
    </div>
  </main>
{% endblock %}
